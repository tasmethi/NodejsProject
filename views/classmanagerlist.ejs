<div class="container">
    <div class="col-sm-6 autocenter">
        <center>
        <div class="card">
        <div class="card-header"> CLASS MANAGER DETAILS
        </div>
        <div class="card-body">
        
				<table>    
                    <thead style="border:1">
                        <tr>
                        <th>Class Manager Name</th>
                        <th>Class Manager Email</th>
                        <th>Contact</th>
                        <th>Branch</th>
                    </tr>
                    </thead>
                    <tbody>
                        <%if (cmlist!="" && cmlist!="Error"){
                            let opt=JSON.parse(cmlist)
                            
                            for(let i=0;i < opt.length;i++){%>
                               
                        <tr>
                            <td><%=opt[i].name%></td>
                            <td><%=opt[i].email%></td>
                            <td><%=opt[i].contact%></td>
                            <td><%=opt[i].branch%></td>
                        </tr>
                        <%}}%>
                    </tbody>
                    </table>
			</center>
